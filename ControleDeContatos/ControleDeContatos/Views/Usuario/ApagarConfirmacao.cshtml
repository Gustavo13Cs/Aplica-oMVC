@model UsuarioModel
@{
    ViewData["Title"] = "Confirmação de apagar o Usuario";
}

<div class="text-center">
    <h3>Realmente deseja apagar o usuario (@Model.Nome)</h3>
</div>

<a class="btn btn-primary d-grid gap-2" role="button" asp-controller="Usuario" asp-action="Index">Cancelar exclusão</a>
<a class="btn btn-danger d-grid gap-2" role="button" asp-controller="Usuario" asp-route-id="@Model.Id" asp-action="Apagar">Confirmar exclusão</a>

